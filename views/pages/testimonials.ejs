<!DOCTYPE html>
<html class="no-js" lang="zxx">
<%- include('../partials/head'); %>
    <style>
        .image-background {
            margin-top: -20px;
            min-height: 100vh;
            background-image: url(/assets/img/micolli/compressed/_MG_6347.png);
            background-repeat: no-repeat;
            background-position: center center;
            background-size: cover !important;
            transition: background-image 3s ease-in-out;

        }

        /* For mobile devices */
        @media (max-width: 767px) {
            .image-background {
                background-size: cover !important;
            }
        }

        .banner-area {
            position: relative;
            /* Ensure overlay and content are positioned relative to the section */
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            /* Dark overlay with transparency */
            z-index: 0;
            /* Put overlay behind other content */
        }
    </style>
    <style>
        /* If you wish to remove the astonish.js file, then also be sure to remove these styles. */
        .astonish {
            visibility: visible;
        }

        @media (min-width: 768px) {
            .astonish {
                visibility: hidden;
            }

            .animated {
                visibility: visible;
            }
        }
    </style>

    <style>
        .arrows {
            font-size: 3vw;
            color: white;
            animation: scaleAnimation 2s infinite alternate ease-in-out;
        }

        .arrows:hover {
            color: violet;
        }

        @keyframes scaleAnimation {
            0% {
                transform: scale(1);
            }

            100% {
                transform: scale(1.4);
            }
        }
    </style>
    <script>
        function navigateTo(path) {
            console.log("Navigating to home")
            window.location.href = path;
        }
    </script>

    <body style="background-color: #141414!important;">
        <%- include('../partials/preloader'); %>
            <main>
                <%- include('../partials/cookiesperm'); %>
                    <section class="banner-area banner-bg image-background">
                        <div class="overlay"></div>
                        <div class="container">
                            <div class="row">
                                <a href="#" onclick="navigateTo('/')" class="arrows left">
                                    <i class="fas fa-arrow-circle-left"></i>
                                </a>
                                <div class="col-12">
                                    <div style="display:flex; flex-direction:column;justify-content: center;align-items: center;"
                                        class="banner-content astonish animated fadeInDown">
                                        <h2 style="text-align:center; position: relative; z-index: 1;">TESTIMONIALS</h2>
                                        <%- include('../partials/testimonials'); %>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

            </main>

            <%- include('../partials/footer'); %>
                <!-- footer-area-end -->

                <!-- JS here -->
                <%- include('../partials/scripts'); %>


    </body>

</html>