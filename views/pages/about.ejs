    const fullText = context?.text;

    // Extract the first letter
const firstLetter = fullText.charAt(0);

// Remove the first letter and handle the rest of the text
const remainingText = fullText.slice(1);

// Find the midpoint
const splitIndex = Math.floor(remainingText.length / 2);

// Find the nearest space to the splitIndex to ensure we don't cut a word
const nearestSpace = remainingText.lastIndexOf(' ', splitIndex);

// If no space is found (which is very rare), fall back to the original split index
const actualSplitIndex = nearestSpace > -1 ? nearestSpace : splitIndex;

// Split the text into two parts
const remainingFirstPart = remainingText.substring(0, actualSplitIndex);
const secondPart = remainingText.substring(actualSplitIndex + 1);
